{
  "name": "shengji",
  "version": "0.0.0",
  "description": "升级: a chinese trick-taking card game",
  "scripts": {
    "start": "node server",
    "dev": "npm start | npm run hotload",
    "hotload": "webpack-dev-server --content-base build/ --progress --colors --hot --port 8090",
    "test": "tape test/*.js",
    "postinstall": "$(npm bin)/webpack ./app.jsx ./public/build/bundle.js",
    "lint": "jscs . && jshint . --exclude-path .gitignore",
    "coverage": "istanbul cover test/** --report lcovonly",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hzoo/shengji.git"
  },
  "keywords": [
    "shengji",
    "tuolaji",
    "bashifen",
    "tractor",
    "zhaopengyou",
    "chinese",
    "cardgame"
  ],
  "author": {
    "name": "Henry Zhu",
    "url": "http://henryzoo.com"
  },
  "license": "MIT",
  "dependencies": {
    "express": "~4.9.7",
    "react": "~0.11.2",
    "reflux": "~0.2.1",
    "lodash": "~2.4.1",
    "webpack": "~1.4.15",
    "style-loader": "~0.8.2",
    "css-loader": "~0.9.0",
    "jsx-loader": "~0.12.2"
  },
  "devDependencies": {
    "webpack-dev-server": "~1.7.0",
    "nodemon": "~1.2.1",
    "tape": "~3.0.3",
    "jscs": "~1.9.0",
    "jshint": "~2.5.11",
    "coveralls": "~2.11.2",
    "istanbul": "~0.3.5"
  },
  "bugs": {
    "url": "https://github.com/hzoo/shengji/issues"
  },
  "homepage": "https://github.com/hzoo/shengji"
}
